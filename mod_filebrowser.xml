  <updateservers>
		<server type="extension" priority="1" name="mod_filebrowser Updates"><![CDATA[https://raw.github.com/enginit/mod_filebrowser/master/extension.xml]]></server>
  </updateservers>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
        <field name="path" type="text" default="images/stories" label="Path to folder" description="Specify the folder where the files to be displayed are stored, must start at the webroot but doesnt need a starting or an ending /" />
        <field name="show_file_size" type="list" default="1" label="Show/Hide File Size" description="Select whether to show the file size next to each item">
          <option value="1">Show</option>
          <option value="0">Hide</option>
        </field>
        <field name="show_icons" type="list" default="1" label="Show/Hide icons" description="Select whether to show the file type icons next to each item">
          <option value="1">Show</option>
          <option value="0">Hide</option>
        </field>
        <field name="icon_size" type="list" default="16x16" label="Icon size" description="Select icons size in pixels">
          <option value="16x16">16x16</option>
          <option value="22x22">22x22</option>
          <option value="32x32">32x32</option>
        </field>
        <field name="icon_word" type="text" default="ms_word.png" label="Icon for doc/docx" description="file name of image only - files should be in /modules/mod_filebrowser/images/" />
        <field name="icon_ppt" type="text" default="unknown.png" label="Icon for ppt/pps/pptx" description="file name of image only - files should be in /modules/mod_filebrowser/images/" />
        <field name="icon_xls" type="text" default="spreadsheet.png" label="Icon for xls/xlsx" description="file name of image only - files should be in /modules/mod_filebrowser/images/" />
        <field name="icon_pdf" type="text" default="pdf.png" label="Icon for pdf" description="file name of image only - files should be in /modules/mod_filebrowser/images/" />
        <field name="icon_media" type="text" default="unknown.png" label="Icon for movies" description="Applied to 'avi/mkv/mov/mpg/mpeg/mp4/flc/swf/wmv' - file name of image only - files should be in /modules/mod_filebrowser/images/" />
        <field name="icon_image" type="text" default="jpeg.png" label="Icon for bmp/png/jpg" description="file name of image only - files should be in /modules/mod_filebrowser/images/" />
        <field name="icon_unknown" type="text" default="unknown.png" label="Icon for doc/docx" description="file name of image only - files should be in /modules/mod_filebrowser/images/" />
